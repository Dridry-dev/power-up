<h1>User Edit</h1>
<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <%= form_for(@buddy, url: buddy_path(@buddy), html: {method: :put}) do |f| %>
          <%= f.text_field :name, placeholder: @buddy.name  %>
          <%= f.text_field :description %>
          <%= f.submit %>
        <% end %>
        <%= link_to '<- Back', profil_buddy_path(current_user) %>
      </div>
    </div>
  </div>
</div>
