<h1><%= @buddy.name  %></h1>
<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <p>Description :<br>
        <%= @buddy.description %></p>
        <ul>
          <% @prestations.each do |prestation| %>
            <li><strong><%= prestation.name %></strong><br>
              Description :<br>
              <%=  prestation.description %><br>
              Prix : <%=  prestation.price %>€ <br>
              <%= link_to "Je reserve cette prestation", new_prestation_booking_path(prestation), class: "btn btn-warning" %> <br><br>
            </li>
          <% end %>
        </ul>

        <%= link_to "Retour à la liste des Buddies", buddies_path(@buddy), class: "btn btn-primary" %>
        <%= link_to "Modifier mon profil", edit_buddy_path(@buddy), class: "btn btn-warning" %>
      </div>
    </div>
  </div>
</div>
