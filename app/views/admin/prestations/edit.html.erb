<h1>Modifier ma prestation</h1>
<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3><%= @prestation.name %></h3>
        <%= simple_form_for [:admin, @prestation] do |f| %>
          <%= f.input :name, placeholder: 'Prestation name' %>
          <%= f.input :description, placeholder: 'Description' %>
          <%= f.input :price, placeholder: '$$$' %>
          <%= f.submit class: 'btn btn-flat' %>
          <%= link_to  "<- Retour", admin_prestations_path%>
        <% end %>
      </div>
    </div>
  </div>
</div>
