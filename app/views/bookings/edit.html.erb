<h1>Booking Edit</h1>

<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h2>Changez la date de votre reservation :</h2>
        <%= simple_form_for [@prestation, @booking], method: :patch  do |f| %>
          <%= f.input :date, as: :date, html5: true %>
          <%= f.submit class: "btn btn-primary" %>
        <% end %>
        <%= link_to '<- Back', prestation_bookings_path(@prestation) %>
      </div>
    </div>
  </div>
</div>
